<html>
    <head>
        <title>ClaimSync</title>
    </head>
    <body>
        <form>
            <select name="id" onchange="this.form.submit()">
                    <option value="">(Please select)</option>
                <% for(const employee of employees) { _%>
                    <option value="<%=employee.employee_id %>" <%=employee.employee_id == selected ? 'selected' : '' %>><%=employee.employee_name %></option>
                <% } _%>
            </select>
        </form>
        <form action="/api/submission/ocr" method="post" enctype="multipart/form-data">
            <p>Upload the receipt image</p>
            <p><input type="file" name="receipt" accept="image/*"/></p>
            <% if(selected) {%>
                <input type="hidden" name="employee_id" value="<%=selected%>" required/>
                <input type="submit" value="Upload"/>
            <% } else {%>
                <p style="color:red">Select the user id first</p>
            <% }%>
        </form>
        <table border="1px solid pink">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Employee name</th>
                    <th>Vendor</th>
                    <th>Purchase Type</th>
                    <th>Claim Date</th>
                    <th>Approval Status</th>
                    <th>Remarks</th>
                </tr>
            </thead>
            <tbody>
            <%
                const approval_status_map = {
                    approved: '✅',
                    pending: '🕐',
                    rejected: '❌'
                };
                for(const row of data){ _%>
                <tr>
                    <td><%= row.claim_id %> </td>
                    <td><%= row.employee_name %> </td>
                    <td><%= row.vendor_name_expanded %> </td>
                    <td><%= row.purchase_type %> </td>
                    <td><%= new Date(row.claim_date).toLocaleString({timeZone:"UTC+08"}) %> </td>
                    <td><%= `${row.claim_status} ${approval_status_map[row.claim_status]||'arghh'}` %></td>
                    <td><%= row.remarks %></td>
                </tr>
            <% } _%>
            </tbody>
        </table>
    </body>
</html>