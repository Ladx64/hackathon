<!DOCTYPE html>
<html>
<head>
    <title>ClaimSync</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 20px;
        }
        
        h1 {
            text-align: center;
            margin-bottom: 30px;
        }
        
        form {
            margin-bottom: 20px;
        }
        
        select {
            padding: 5px;
        }
        
        input[type="file"] {
            margin-top: 10px;
        }
        
        .error-message {
            color: red;
        }
        
        table {
            border-collapse: collapse;
            width: 100%;
        }
        
        th, td {
            padding: 10px;
            text-align: left;
            border: 1px solid pink;
        }
        
        th {
            background-color: pink;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <h1>ClaimSync</h1>
    <form>
        <label for="id">Select Employee:</label>
        <select name="id" onchange="this.form.submit()">
            <option value="">(Please select)</option>
            <% for(const employee of employees) { _%>
                <option value="<%=employee.employee_id %>" <%=employee.employee_id == selected ? 'selected' : '' %>><%=employee.employee_name %></option>
            <% } _%>
        </select>
    </form>
    <form action="/api/submission/ocr" method="post" enctype="multipart/form-data">
        <p>Upload the receipt image:</p>
        <input type="file" name="receipt" accept="image/*"/>
        <% if(selected) { %>
            <input type="submit" value="Upload"/>
        <% } else { %>
            <p class="error-message">Select the user id first</p>
        <% } %>
    </form>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Employee Name</th>
                <th>Vendor</th>
                <th>Purchase Type</th>
                <th>Claim Date</th>
                <th>Approval Status</th>
                <th>Remarks</th>
            </tr>
        </thead>
        <tbody>
        <% const approval_status_map = { approved: '✅', pending: '🕐', rejected: '❌' };
            for(const row of data) { _%>
            <tr>
                <td><%= row.claim_id %></td>
                <td><%= row.employee_name %></td>
                <td><%= row.vendor_name_expanded %></td>
                <td><%= row.purchase_type %></td>
                <td><%= new Date(row.claim_date).toLocaleString('en-US', { timeZone: 'UTC+08' }) %></td>
                <td><%= `${row.claim_status} ${approval_status_map[row.claim_status] || 'arghh'}` %></td>
                <td><%= row.remarks %></td>
            </tr>
        <% } _%>
        </tbody>
    </table>
</body>
</html>

